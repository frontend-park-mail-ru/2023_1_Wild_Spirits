<div class="profile-link">
    <a id="profile-link" class="js-router-link link profile-link__profile-block" href="/profile/{{user_id}}">
        <div class="profile-link__img-block">
            <img class="profile-link__img" src="{{img}}" alt="ProfileLink" />
        </div>
        <div class="profile-link__name-block">
            {{name}}
        </div>
    </a>
    <div id="profile-link-logout">
        <img class="profile-link__logout-img" src="/assets/img/logout.png" />
    </div>
</div>
