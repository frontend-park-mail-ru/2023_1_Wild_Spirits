<div class="event-create">
    <form class="form" id="event-create-form">
        <label for="event-create-name" class="form-label"> Название мероприятия: </label>
        <input name="name" class="form-control" type="text" id="event-create-name" />

        {{! <label for="event-create-teaser" class="form-label"> Тизер: </label>
        <textarea
            name="teaser"
            class="form-control event-create__form-textarea"
            type="text"
            id="event-create-teaser"
        ></textarea> }}

        <label for="event-create-desc" class="form-label"> Полное описание: </label>
        <textarea
            name="desc"
            class="form-control event-create__form-textarea"
            type="text"
            id="event-create-desc"
        ></textarea>

        <label for="event-create-date-first" class="form-label"> Дата начала: </label>
        <input name="date-first" class="form-control" type="date" id="event-create-date-first" />

        <label for="event-create-date-first" class="form-label"> Время начала: </label>
        <input name="time-first" class="form-control" type="time" />

        <label for="event-create-date-second" class="form-label"> Дата конца: </label>
        <input name="date-second" class="form-control" type="date" id="event-create-date-second" />

        <label for="event-create-date-first" class="form-label"> Время конца: </label>
        <input name="time-second" class="form-control" type="time" />

        <label for="event-create-place" class="form-label"> Место проведения: </label>
        <input
            name="place"
            class="form-control"
            id="event-create-place"
            list="test"
            placeholder="Выберите место проведения..."
        />
        <datalist id="test">
            <option value="ВДНХ"></option>
            <option value="Битца"></option>
            <option value="Большой театр"></option>
            <option value="Третьяковская галерея"></option>
        </datalist>

        <label for="event-create-place" class="form-label"> Картинка: </label>
        <input name="file" class="form-control" type="file" />

        <input class="button form-submit" id="event-create-submit" type="submit" />

    </form>
</div>