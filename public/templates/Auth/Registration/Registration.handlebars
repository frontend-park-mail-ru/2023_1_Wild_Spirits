<h2 class="auth__title">Регистрация</h2>

<form class="auth__form" id="register-form">
    <div class="input-group">
        <label for="nickname">Имя</label>
        <input name="nickname" class="form-input" value="smth">
    </div>

    <div class="input-group">
        <label for="email">Почта</label>
        <input name="email" class="form-input">
    </div>

    <div class="input-group">
        <label for="password">Пароль</label>
        <input name="password" class="form-input">
    </div>

    <div class="input-group">
        <label for="passwordConfirmation">Подтверждения пароля</label>
        <input name="passwordConfirmation" class="form-input">
    </div>

    <div class="input-group input-group-inline">
        <input name="accept" type="checkbox">
        <label for="accept">Я согласен с обработкой персональных данных</label>
    </div>

    <div class="submit-group">
        <a class="link-button">Вход</a>
        <input type="submit" value="Регистрация" class="button">
    </div>
</form>
